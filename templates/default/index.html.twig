{% extends 'base.html.twig' %}

{% block title %}Все новости{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12">
                <div class="wrapper">
                    <div class="count">
                        Всего новостей: <span>{{ pagination.getTotalItemCount }}</span>
                    </div>
                    <span class="search_query" style="display: none;">Поиск по запросу: <span>{{ searchQuery }}</span></span>
                    <form action="{{ url('default') }}" class="search-form">
                        <div class="form-group has-feedback">
                            <label for="search" class="sr-only">Search</label>
                            <input type="text" class="form-control" name="query" id="search" placeholder="Поиск..." value="{{ searchQuery }}">
                            <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        </div>
                    </form>

                    <div id="posts">
                        {% include 'default/parts/search.html.twig' %}
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4">
	            {% include 'default/parts/sidebar.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
